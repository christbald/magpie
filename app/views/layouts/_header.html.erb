<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav>
      <ul class="nav navbar-nav navbar-left">
        <li><%= link_to "magpie", root_path, id: "logo" %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Projects <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "New Project", new_user_project_path(current_user) %></li>
              <li><%= link_to "My Projects", user_projects_path(current_user) %></li>
            </ul>
          </li>
          <% if !current_user.guest? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log Out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
          <% else %>
          <li><%= link_to "Delete Session Data", current_user, method: :delete %></li>
          <%= link_to "Delete", user_path(current_user), :confirm => "Are you sure?", :method => :delete %>

          <% end %>
          <% if current_user.admin? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Admin <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Users", users_path %></li>
                <li class="divider"></li>
                <li><%= link_to "Models", models_path %></li>
                <li><%= link_to "Register Model", new_model_path %></li>
              </ul>
            </li>
          <% end %>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
        <% if logged_in? %>
          <li class="navbar-text"><p class="text-info">Logged in as <%= current_user.name %></p></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
