<p id="notice"><%= notice %></p>

<h1>My Projects</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>User</th>
      <th>Job</th>
      <th>Name</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_projects.each do |user_project| %>
      <tr>
        <td><%= user_project.user %></td>
        <td><%= user_project.job_id %></td>
        <td><%= link_to user_project.name, user_project , :class => "btn btn-mini"%></td>
        <td><%= user_project.status %></td>
        <td><%= link_to 'Edit', edit_user_project_path(user_project), :class => "btn btn-mini" %></td>
        <td><%= link_to 'Destroy', user_project, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-mini btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User project', new_user_project_path, :class => "btn btn-primary" %>
