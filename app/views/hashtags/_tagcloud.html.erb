<% delete_links = false if local_assigns[:delete_links].nil? %>
<% @hashtags.each do |hashtag| %>
  <font size=<%= tagcloudsize hashtag %>><%= link_to("##{hashtag.tag}", hashtag_path(hashtag.tag)) %></font>
  <% if delete_links && current_user.id == @user.id%>
  <%= link_to user_hashtag_delete_path(current_user.id, :tag => hashtag.tag), class: "btn btn-secondary btn-link btn-xs" do %>
  <i class="glyphicon glyphicon-remove aria-hidden='false'"></i><% end %>
  <% end %>
<% end %>
