<%= simple_form_for(@model) do |f| %>

  <div class="form-inputs">
    <%= f.input :name, required: true%>
    <%= f.label :source %><br>
    <%= f.file_field :source, required: true %>
    <%= f.input :description, required: true%>
    <%= f.input :help, required: false%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
